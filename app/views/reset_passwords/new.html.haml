= content_for :title, t('las.reset_password.title')

%div.col-lg-6
  %div.well.bs-component
    = form_tag(reset_password_url, class: 'form-horizontal') do
      %div.form-group
        = label_tag :email, 'email', class: 'col-lg-2 control-label'
        %div.col-lg-10
          = text_field_tag :email, '', class: 'form-control'
      %div.form-group
        %div.col-lg-10.col-lg-offset-2
          = submit_tag 'submit', class: 'btn btn-primary'
