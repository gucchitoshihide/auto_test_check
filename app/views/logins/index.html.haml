%h1 Login#index

#alert
  - if alert
    - if alert.instance_of?(Array)
      - alert.each do |alert_message|
        %li
          = alert_message
    - else
      = alert

= form_for(:user, url: logins_path) do |f|
  %div
    = f.label :name, 'name'
    = f.text_field :name
  
  %div
    = f.label :password, 'password'
    = f.password_field :password

  = f.submit 'login'
