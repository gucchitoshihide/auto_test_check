= javascript_include_tag 'login'

%h1 Login#index

#alert
  - if alert
    - if alert.instance_of?(Array)
      - alert.each do |alert_message|
        %li
          = alert_message
    - else
      = alert

= form_for(:user, url: logins_path) do |f|
  %div#user_form
    %div.name_field
      = f.label :name, 'name'
      = f.text_field :name
    %div.password_field
      = f.label :password, 'password'
      = f.password_field :password
    %div.submit_field
      = f.submit 'login'
