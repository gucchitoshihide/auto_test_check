= javascript_include_tag 'login'

#alert
  - if alert
    - if alert.instance_of?(Array)
      - alert.each do |alert_message|
        %li
          = alert_message
    - else
      = alert

%div.col-lg-6
  %div.well.bs-component
    = form_for(:user, url: logins_path, html: {class: 'form-horizontal'}) do |f|
      %div.form-group
        = f.label :name, 'name', class: 'col-lg-2 control-label'
        %div.col-lg-10
          = f.text_field :name,  class: 'form-control'
      %div.form-group
        = f.label :password, 'password', class: 'col-lg-2 control-label'
        %div.col-lg-10
          = f.password_field :password,  class: 'form-control'
      %div.form-group
        %div.col-lg-10.col-lg-offset-2
          = f.submit 'login', class: 'btn btn-primary'
