- if alert.present?
  #error_message
    %div
      - alert.each do |message|
        %li
          = message

%div.col-lg-6
  %div.well.bs-component
    = form_for(:article, url: skill_profiles_path, html: {class: 'form-horizontal'}) do |f|
      %div.form-group
        = f.label :title, t('las.week_reports.title'), class: 'col-lg-2 control-label'
        %div.col-lg-10
          = f.text_field :title, class: 'form-control'
      %div.form-group
        = f.label :content, t('las.week_reports.content'), class: 'col-lg-2 control-label'
        %div.col-lg-10
          = f.text_area :content, size: '20x20', class: 'form-control'
      %div.form-group
        %div.col-lg-10.col-lg-offset-2
          = f.submit t('las.week_reports.submit'), class: 'btn btn-primary'

= link_to 'Back', skill_profiles_path
