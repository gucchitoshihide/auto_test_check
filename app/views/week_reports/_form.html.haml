- if alert.present?
  #error_message
    = alert

= form_for(:report, url: week_reports_path) do |f|
  %div
    = f.label :title, t('las.week_reports.title')
    = f.text_field :title

  %div
    = f.label :content, t('las.week_reports.content')
    = f.text_field :content
  = f.submit t('las.week_reports.submit')
