- if alert.present?
  #error_message
    %div
      %li
        = alert

%table
  %thead
    %tr
      %th title
      %th content
      %th{:colspan => "3"}
      %th{:colspan => "3"}
      %th{:colspan => "3"}
  %tbody
    - WeekReport.latest.each do |report|
      %tr
        %td
          = report.title
        %td
          = report.content
        %td
          = link_to 'Show', week_report_path(id: report.id)
        %td
          = link_to 'Delete', week_report_path(id: report.id), method: :delete, data: { confirm: 'Are you sure?' }
        - if ArticleComment.find_by_article_id(report.id).present?
          %td
            = link_to Comment.find_by(id: 1).content, '#'
- #       %td
- #         = link_to 'Edit', edit_week_report_path(id: report.id)

%br
= link_to 'New Week report', new_week_report_path

= link_to 'Home', root_path
