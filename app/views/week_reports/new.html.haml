%h1 New week_report

- if alert.present?
  #error_message
    %div
      - if alert.instance_of?(Array) 
        - alert.each do |alert_message|
          %li
            = alert_message
      - else
        %li
          = alert


= form_for(:article, url: week_reports_path) do |f|
  %div
    = f.label :title, t('las.week_reports.title')
    = f.text_field :title

  %div
    = f.label :content, t('las.week_reports.content')
    = f.text_field :content
  = f.submit t('las.week_reports.submit')

= link_to 'Back', week_reports_path
